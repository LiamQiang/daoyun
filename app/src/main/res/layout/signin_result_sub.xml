<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/bg_mysell">


    <RelativeLayout
        android:id="@+id/Signin_Result_Sub"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/border_3">

        <ImageView
            android:id="@+id/Student_Pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:src="@mipmap/classpic"
            android:layout_centerVertical="true">
        </ImageView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Student_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="李四"
                android:textColor="@color/colorAccent"
                android:textSize="22sp" />
            <TextView
                android:id="@+id/Student_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:text="200327256"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/Student_Signin_State"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:text="缺勤"
            android:textColor="#fe5244"
            android:textSize="22dp" />


    </RelativeLayout>

</LinearLayout>